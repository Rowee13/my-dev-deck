# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/devdeck"

# Server
PORT=4000
NODE_ENV=development

# SMTP Server (for DevInbox)
SMTP_PORT=2525
SMTP_DOMAIN="devinbox.local"
SMTP_MAX_SIZE=10485760

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_ACCESS_EXPIRATION="24h"
JWT_REFRESH_EXPIRATION="30d"

# Rate Limiting - Login
LOGIN_RATE_LIMIT_TTL=900
LOGIN_RATE_LIMIT_MAX=5

# API Configuration
API_RATE_LIMIT_TTL=60
API_RATE_LIMIT_MAX=100

# CORS (comma-separated origins)
CORS_ORIGINS="http://localhost:4001,http://localhost:4000"

# Swagger Documentation
SWAGGER_USER="admin"
SWAGGER_PASSWORD="admin123"
